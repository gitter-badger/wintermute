# vim: ft=astylerc tw=78

--style=kr

# Spacing and indentation
        indent=spaces=2
                      indent-switches
                      indent-cases
                      pad-header
                      convert-tabs

# Alignment and positioning
                      delete-empty-lines
                      align-pointer=type
                                    add-brackets
                                    add-one-line-brackets
                                    lineend=linux
                                        suffix=none
                                            preserve-date
